---
interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname; // Obtiene la ruta actual
---

<header class="header-gray">
    <nav class="nav-menu"> 
      <a class={currentPath === "/" ? "active" : ""} href="/"><ion-icon name="home" class="icons"/>  Inicio</a>
      <a class={currentPath === "/gallery" ? "active" : ""} href="/gallery"><ion-icon name="images" class="icons"/>  Galer√≠a</a>
      <a class={currentPath === "/contact_us" ? "active" : ""} href="/contact_us"><ion-icon name="mail" class="icons"/>  Contacto</a>
    </nav>

    <h1>{title}</h1>
</header>

<style>
	.header-gray {
		position: relative;
    	width: 100vw;
    	height: 800px;
    	background: linear-gradient(
            rgba(217, 217, 217, 0.45), 
            rgba(217, 217, 217, 0.45)
        ), 
        url("/place.jpg") no-repeat center/cover;
	}

	.header-gray::after {
      content: "";
      position: absolute;
      width: 100vw;
	  height: 20%;
	  bottom: 0;
	  margin-bottom: -157px;
      background: linear-gradient(
            rgba(138, 143, 148), 
            rgba(255, 255, 255)
        );
      pointer-events: none; /* Asegura que no bloquee clics sobre la imagen */
	}

	.nav-menu {
		background-color: whitesmoke;
		padding: 20px 40px;
		border-radius: 30px;
		position: absolute;
		top: 30px;
		left: 0;
		right: 0;
		margin-left: 20%;
		margin-right: 20%;
		display: flex;
		justify-content: space-around;
		align-items: center;
	}

	a {
		font-size: x-large;
		color: black;
		font-weight: 700;
		text-decoration: none;
		position: relative;
	}

	a.active {
		color: goldenrod;
	}

	a:not(:last-child):after {
		content: '';
		position: absolute;
		right: -120%;
		top: 0;
		bottom: 0;
		width: 1px;
		background-color: gray;
	}

	.icons {
		font-size: 24px;
	}

	h1 {
		position: absolute;
		top: 40%;
    	left: 50%;
		transform: translate(-50%, -50%);
		font-size: 5rem;
	}



</style>